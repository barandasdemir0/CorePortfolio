@using EntityLayer.Concrete
@model List<WriterMessage>
@{
    ViewData["Title"] = "ReceiverMessageList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yazar-Admin Mesaj Tablosu</h4>

            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th> # </th>
                            <th>  Mail / Gönderen </th>
                            <th>  Konu </th>
                            <th> Tarih </th>
                            <th> Mesajı Gör </th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @{
                                        count++;
                                    }
                                    @count
                                </td>
                                <td>  @item.MessageSenderName </td>

                                <td> @item.MessageSubject </td>

                                <td> @item.MessageDate.ToShortDateString() </td>



                                <td> <a href="/AdminMesaj/MessageDetails/@item.WriterMessageID" class="btn btn-outline-primary">Mesaj Detayları</a>  </td>

                            </tr>
                        }


                    </tbody>

                </table>
                <br />
                 <a href="/AdminMesaj/MessageSend/" class="btn btn-outline-success">Mesaj Gönder</a>  
            </div>
        </div>
    </div>
</div>

