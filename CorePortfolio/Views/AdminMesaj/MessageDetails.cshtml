@model EntityLayer.Concrete.WriterMessage
@{
    ViewData["Title"] = "MessageDetails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <p class="card-description"> Mesaj Detay Sayfası </p>
            <form class="forms-sample">
                @Html.HiddenFor(x => x.WriterMessageID)
                <div class="form-group">
                    <label>Ad Soyad</label>
                    @Html.TextBoxFor(x => x.MessageSender, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Gönderen Mail</label>
                    @Html.TextBoxFor(x => x.MessageSenderName, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Ad Soyad</label>
                    @Html.TextBoxFor(x => x.MessageReceiverName, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Alıcı Mail</label>
                    @Html.TextBoxFor(x => x.MessageReceiver, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Başlık</label>
                    @Html.TextBoxFor(x => x.MessageSubject, new { @class = "form-control" })
                </div>
              
                <div class="form-group">
                    <label>Tarih</label>
                    <input value="@Model.MessageDate.ToShortDateString()" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Mesaj</label>
                    @Html.TextAreaFor(x => x.MessageContent, 10, 3, new { @class = "form-control", })
                </div>
            </form>
        </div>
    </div>
</div>

