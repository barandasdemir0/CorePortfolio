@using EntityLayer.Concrete
@model List<Message>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Deneyim Tablosu</h4>

            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th> # </th>
                            <th>  Mail / Gönderen </th>
                            <th> Tarih </th>
                            <th> Mesajı Gör </th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td> @{
                                count++;
                            }
 @count  </td>
                            <td> @item.MessageMail  / @item.MessageNameSurname </td>
                           


                            <td> @item.MessageDate.ToShortDateString() </td>

                         
                                <td> <a href="/Contact/ContactDetails/@item.MessageID" class="btn btn-outline-primary">Mesaj Detayları</a>  </td>

                        </tr>
                                                }


                    </tbody>

                </table>
                <br />
           
            </div>
        </div>
    </div>
</div>

