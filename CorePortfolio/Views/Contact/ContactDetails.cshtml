@model EntityLayer.Concrete.Message
@{
    ViewData["Title"] = "ContactDetails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <p class="card-description"> Mesaj Detay Sayfası </p>
            <form class="forms-sample">
                @Html.HiddenFor(x => x.MessageID)
                <div class="form-group">
                    <label>Ad Soyad</label>
                    @Html.TextBoxFor(x => x.MessageNameSurname, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Mail</label>
                    @Html.TextBoxFor(x => x.MessageMail, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Tarih</label>
                    <input value="@Model.MessageDate.ToShortDateString()" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Mesaj</label>
                    @Html.TextAreaFor(x => x.MessageContent, 10, 3, new { @class = "form-control", })
                </div>
            </form>
        </div>
    </div>
</div>



