@using EntityLayer.Concrete
@model List<Skill>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yetenekler Tablosu</h4>

            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th> # </th>
                            <th> Yetenek Adı </th>
                            <th> Yetenek Yüzdesi </th>
                            <th> Sil </th>
                            <th> Güncelle </th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td> @item.SkillID </td>
                                <td> @item.SkillTitle </td>
                                <td>
                                    <div class="progress">
                                        <div class="progress-bar bg-success" role="progressbar" style="width:  @item.SkillValue%" aria-valuenow="@item.SkillValue" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                    <br />
                                    @item.SkillValue.ToString()
                                </td>
                                <td> <a href="/Skill/SkillDelete/@item.SkillID" class="btn btn-outline-danger">Sil</a>  </td>
                                <td> <a href="/Skill/SkillUpdate/@item.SkillID" class="btn btn-outline-warning">Güncelle</a>  </td>

                            </tr>
                        }


                    </tbody>
                  
                </table>
                <br />
                <a href="/Skill/SkillInsert/" class="btn btn-outline-primary">Yeni Yetenek Ekle</a>
            </div>
        </div>
    </div>
</div>
