@using EntityLayer.Concrete
@model List<Portfolio>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Proje Tablosu</h4>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th> Resim </th>
                            <th> Projenin Adı </th>
                            <th> Tamamlanma Oranı </th>
                            <th> Ücreti </th>
                            <th> Durumu </th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="py-1">
                                    <img src="@item.ProjectImageUrl" alt="image" />
                                </td>
                                <td> @item.ProjectName </td>
                                <td>
                                    @if (item.Value > 50)
                                    {
                                        <div class="progress">
                                            <div class="progress-bar bg-success" role="progressbar"
                                                 style="width: @item.Value%" aria-valuenow="@item.Value"
                                                 aria-valuemin="0" aria-valuemax="100">
                                            </div>
                                        </div>
                                        <br />

                                        <div class="text-success">@item.Value% <i class="mdi mdi-arrow-up"></i></div>
                                    }
                                    else
                                    {
                                        <div class="progress">
                                            <div class="progress-bar bg-danger" role="progressbar"
                                                 style="width: @item.Value%" aria-valuenow="@item.Value"
                                                 aria-valuemin="0" aria-valuemax="100">
                                            </div>
                                        </div>
                                        <br />

                                        <div class="text-danger">@item.Value% <i class="mdi mdi-arrow-down"></i></div>
                                    }
                                </td>




                                <td> @item.Price ₺ </td>
                                <td>
                                    @if (item.Status)
                                    {
                                        <label class="badge badge-success">Tamamlandı</label>
                                    }
                                    else
                                    {
                                        <label class="badge badge-danger">Tamamlanmadı</label>
                                    }
                                </td>

                            </tr>
                        }


                    </tbody>
                </table>
                <a href="/Portfolio/PortfolioInsert/" class="btn btn-outline-primary">Yeni Porje Girişi</a>
            </div>
        </div>
    </div>
</div>


