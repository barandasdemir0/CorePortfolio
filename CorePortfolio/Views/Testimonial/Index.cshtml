@using EntityLayer.Concrete
@model List<Testimonial>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Referanslar Tablosu</h4>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            
                            <th> # </th>
                            <th> Resim </th>
                            <th> Referans Adı </th>
                            <th> Şirketi </th>
                            <th> Başlık </th>
                            <th> Sil </th>
                            <th> Güncelle </th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td> @item.TestimonialID </td>
                                <td class="py-1">
                                    <img src="@item.ClientImageUrl" alt="image" />
                                </td>
                                <td> @item.ClientName </td>
                                <td> @item.ClientCompany </td>
                                <td> @item.ClientTitle </td>



                                <td> <a href="/Testimonial/TestimonialDelete/@item.TestimonialID" class="btn btn-outline-danger">Sil</a></td>
                                <td> <a href="/Testimonial/TestimonialUpdate/@item.TestimonialID" class="btn btn-outline-warning">Güncelle</a></td>

                            </tr>
                        }


                    </tbody>
                </table>
                <a href="/Testimonial/TestimonialInsert/" class="btn btn-outline-primary">Yeni Referans Girişi</a>
            </div>
        </div>
    </div>
</div>

