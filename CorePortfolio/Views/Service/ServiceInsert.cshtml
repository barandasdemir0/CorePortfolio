@model EntityLayer.Concrete.Service 
@{
    ViewData["Title"] = "ServiceInsert";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yetenekler</h4>
            <p class="card-description"> Yeteneklerinizi ve yüzdelerini girin </p>
            <form method="post">


                <div class="form-group row">
                    <div class="col">
                        <label>Hizmet Adı</label>
                        <div id="the-basics">
                            <input class="form-control" name="ServiceTitle" type="text" placeholder="Hizmet Adı">
                        </div>
                    </div>
                    <div class="col">
                        <label>Hizmet resmi</label>
                        <div id="bloodhound">
                            <input class="form-control" name="ServiceImageUrl" type="text" placeholder="Hizmet Resmi">
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-outline-success">Yeni Hizmet Ekle</button>

            </form>


        </div>
    </div>
</div>


