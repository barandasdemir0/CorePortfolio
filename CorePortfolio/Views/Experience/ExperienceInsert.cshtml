@model EntityLayer.Concrete.Experience
@{
    ViewData["Title"] = "ExperienceInsert";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yeni Yetenek Ekle</h4>
          
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label for="exampleInputName1">Başlık</label>
                    <input type="text" class="form-control" name="ExperienceName" >
                </div>

                <div class="form-group">
                    <label for="exampleTextarea1">Açıklama</label>
                    <textarea class="form-control" name="ExperienceDescription" rows="4"></textarea>
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Tarih zaman</label>
                    <input type="text" class="form-control" name="ExperienceDate" >
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Resim Ekle</label>
                    <input type="text" class="form-control" name="ExperienceImageUrl" >
                </div>

         
              
              
                <button type="submit" class="btn btn-primary mr-2">Ekle</button>
                <a href="/Experience/Index/" class="btn btn-dark">Geri Dön</a>
            </form>
        </div>
    </div>
</div>
