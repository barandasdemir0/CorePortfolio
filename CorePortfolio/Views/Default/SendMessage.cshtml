<div class="col-md-6" data-aos="zoom-in" data-aos-delay="100">
    <div class="bg-light my-2 p-3 pt-2">
        <form action="/Default/SendMessage/" method="post">
            <div class="form-group my-2">
                <label for="name" class="form-label fw-bolder">İsim Soyisminiz</label>
                <input class="form-control" type="text" id="name" name="MessageNameSurname" required>
            </div>
            <div class="form-group my-2">
                <label for="email" class="form-label fw-bolder">Mailiniz</label>
                <input class="form-control" type="email" id="email" name="MessageMail" required>
            </div>
            <div class="form-group my-2">
                <label for="message" class="form-label fw-bolder">Mesajınız</label>
                <textarea class="form-control" style="resize: none;" id="message" name="MessageContent" rows="4" required></textarea>
            </div>
            <button class="btn btn-primary mt-2" type="submit">Mesaj Gönder</button>
        </form>
    </div>
</div>