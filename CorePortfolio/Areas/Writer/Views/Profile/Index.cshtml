@model CorePortfolio.Areas.Writer.Models.UserEditViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Profil Bilgilerini Güncelle</h4>
            <form method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="exampleInputName1">Adınız Soyadınız</label>
                    <input type="text" asp-for="NameSurname"  class="form-control" id="exampleInputName1" placeholder="Ad Soyad">
                </div>
              
                <div class="form-group">
                    <label for="exampleInputPassword4">Şifreniz</label>
                    <input type="password"  class="form-control" id="exampleInputPassword4" placeholder="Şifre">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Şifreniz Tekrar</label>
                    <input type="password" class="form-control" id="exampleInputPassword4" placeholder="Şifre Tekrar">
                </div>
              
                <div class="form-group">
                    <label>Resim Yükle</label>
                    <input type="file" asp-for="Picture" >
                  @*   <div class="input-group col-xs-12">
                        <input type="text" class="form-control file-upload-info" disabled placeholder="Resim Seç">
                        <span class="input-group-append">
                            <button class="file-upload-browse btn btn-primary" type="button">Yükle</button>
                        </span>
                    </div> *@
                </div>
               
                <button type="submit" class="btn btn-outline-primary mr-2">Güncelle</button>
                <button class="btn btn-outline-light">Geri Dön</button>
            </form>
        </div>
    </div>
</div>

