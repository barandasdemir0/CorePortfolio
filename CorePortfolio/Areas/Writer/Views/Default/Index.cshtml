@using EntityLayer.Concrete
@model List<Announcement>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Duyurular</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Başlık</th>
                            <th>Tarih</th>
                            <th>Türü</th>
                            <th>Detaylar</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.AnnouncementID</td>
                                <td>@item.AnnouncementTitle</td>
                                <td>@item.AnnouncementDate.ToShortDateString()</td>
                                <td><label class="badge badge-danger">@item.AnnouncementStatus</label></td>
                                <td><a class="btn btn-outline-primary" href="/Writer/Default/Details/@item.AnnouncementID">Detaylar</a></td>
                            </tr>
                        }
                        
                      
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
