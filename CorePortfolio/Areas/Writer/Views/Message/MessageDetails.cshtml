@model EntityLayer.Concrete.WriterMessage
@{
    ViewData["Title"] = "MessageDetails";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Mesajlar</h4>


            @Html.HiddenFor(x => x.WriterMessageID)


            <div class="form-group">
                <label for="exampleInputName1">Mesaj Gönderen Mail</label>
                @Html.TextBoxFor(x => x.MessageSender, new { @class = "form-control",@readonly = "readonly" })

            </div>
            <div class="form-group">
                <label for="exampleInputName1">Mesaj Gönderen Kişi</label>
                @Html.TextBoxFor(x => x.MessageSenderName, new { @class = "form-control", @readonly = "readonly" })

            </div>


            <div class="form-group">
                <label for="exampleInputName1">Mesaj Alıcı Mail</label>
                @Html.TextBoxFor(x => x.MessageReceiver, new { @class = "form-control",@readonly = "readonly" })

            </div>
            <div class="form-group">
                <label for="exampleInputName1">Mesaj Alıcı Kişi</label>
                @Html.TextBoxFor(x => x.MessageReceiverName, new { @class = "form-control", @readonly = "readonly" })

            </div>



            <div class="form-group">
                <label for="exampleInputName1">Mesaj Başlığı</label>
                @Html.TextBoxFor(x => x.MessageSubject, new { @class = "form-control", @readonly = "readonly" })

            </div>


            <div class="form-group">
                <label for="exampleInputName1">Mesaj İçeriği</label>
                @Html.TextAreaFor(x => x.MessageContent, 10,3, new { @class = "form-control" , @readonly = "readonly"})

            </div>

            <div class="form-group">
                <label for="exampleInputName1">Mesaj Tarihi</label>
                <input type="text" class="form-control" value="@Model.MessageDate.ToShortDateString()" readonly />


            </div>
          





           

        </div>
    </div>
</div>

