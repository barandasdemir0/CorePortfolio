@model EntityLayer.Concrete.WriterMessage
@{
    ViewData["Title"] = "AddMessage";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Mesajlar</h4>


          <form method="post">
                
            


         

            <div class="form-group">
                <label for="exampleInputName1">Mesaj Alıcı Mail</label>
                @Html.TextBoxFor(x => x.MessageReceiver, new { @class = "form-control" })

            </div>
           


            <div class="form-group">
                <label for="exampleInputName1">Mesaj Başlığı</label>
                @Html.TextBoxFor(x => x.MessageSubject, new { @class = "form-control" })

            </div>


            <div class="form-group">
                <label for="exampleInputName1">Mesaj İçeriği</label>
                @Html.TextAreaFor(x => x.MessageContent, 10, 3, new { @class = "form-control" })

            </div>

           <button type="submit" class="btn btn-outline-success">Gönder Mesajı</button>


            </form>





        </div>
    </div>
</div>


