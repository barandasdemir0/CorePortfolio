@using EntityLayer.Concrete
@model List<WriterMessage>
@{
    ViewData["Title"] = "Sendermessage";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
    int count = 0;
}




<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Gelen Kutusu</h4>

            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th> # </th>
                            <th> Konu </th>
                            <th> Alıcı </th>
                            <th> Tarih </th>
                            <th> Detaylar </th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @{
                                        count++;
                                    }
                                    @count
                                </td>
                                <td> @item.MessageSubject </td>
                                <td> @item.MessageReceiverName </td>
                                <td> @item.MessageDate.ToShortDateString() </td>




                                <td> <a href="/Writer/Message/MessageDetails/@item.WriterMessageID" class="btn btn-outline-primary">Mesajı Gör</a>  </td>

                            </tr>
                        }


                    </tbody>

                </table>
               
            </div>
        </div>
    </div>
</div>


